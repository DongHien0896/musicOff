<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_songs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="@integer/integer_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="@integer/integer_1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="@integer/integer_1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_time_start"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_weight="@integer/integer_1"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dp_10" />

            <SeekBar
                android:id="@+id/seekbar_time"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_weight="@integer/integer_4"
                android:pointerIcon="crosshair"
                android:progress="@integer/integer_0"
                android:secondaryProgressTint="@color/color_white" />

            <TextView
                android:id="@+id/text_time_end"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_weight="@integer/integer_1"
                android:textColor="@color/color_white"
                android:textSize="@dimen/dp_10" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="@integer/integer_1"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/button_shuffle_off"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="@drawable/ic_player_shuffle"
                android:visibility="visible" />

            <Button
                android:id="@+id/button_shuffle_on"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="@drawable/ic_player_shuffle_selected"
                android:visibility="gone" />

            <Button
                android:id="@+id/button_previuos"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_90"
                android:background="@drawable/ic_player_prev" />

            <Button
                android:id="@+id/button_play"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_130"
                android:background="@drawable/ic_player_play"
                android:visibility="visible" />

            <Button
                android:id="@+id/button_pause"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_130"
                android:background="@drawable/ic_player_pause"
                android:visibility="gone" />

            <Button
                android:id="@+id/button_next"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_170"
                android:background="@drawable/ic_player_next" />

            <Button
                android:id="@+id/button_repeat_off"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_260"
                android:background="@drawable/ic_player_repeat"
                android:visibility="visible" />

            <Button
                android:id="@+id/button_repeat_1"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_260"
                android:background="@drawable/ic_player_repeat_1"
                android:visibility="gone" />

            <Button
                android:id="@+id/button_repeat_all"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_260"
                android:background="@drawable/ic_player_repeat_all"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
